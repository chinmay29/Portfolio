<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="@color/grey"
        android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
        android:id="@+id/layout">

        <TextView android:text="@string/title" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:height="45dp"
            android:gravity="center"
            android:textSize="25sp"
            android:id="@+id/title" />

        <Button
            style="@style/Buttons"
            android:text="SPOTIFY STREAMER"
            android:id="@+id/spotify"
            android:layout_below="@+id/title"
            android:onClick="showToast"
            android:tag="spotify"/>

        <Button
            style="@style/Buttons"
            android:text="SCORES APP"
            android:id="@+id/scores"
            android:layout_below="@+id/spotify"
            android:onClick="showToast"
            android:tag="scores"/>
        <Button
            style="@style/Buttons"
            android:text="LIBRARY APP"
            android:id="@+id/library"
            android:layout_below="@+id/scores"
            android:onClick="showToast"
            android:tag="library"
            />
        <Button
            style="@style/Buttons"
            android:text="BUILD IT BIGGER"
            android:id="@+id/buildBig"
            android:layout_below="@+id/library"
            android:onClick="showToast"
            android:tag="buildBig"
            />
        <Button
            style="@style/Buttons"
            android:text="XYZ READER"
            android:id="@+id/xyz"
            android:layout_below="@+id/buildBig"
            android:onClick="showToast"
            android:tag="xyz"
            />
        <Button
            style="@style/Buttons"
            android:text="CAPSTONE:MY OWN APP"
            android:id="@+id/own"
            android:background="@color/red"
            android:layout_below="@+id/xyz"
            android:onClick="showToast"
            android:tag="my own capstone"
            />


    </RelativeLayout>
</ScrollView>